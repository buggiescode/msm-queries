<h1>Actor #<%= @actor.id %> details</h1>

<a href="/actors">Go back</a>

<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>
  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>
  <dt>bio</dt>
  <dd><%= @actor.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @actor.image %>" alt="Picture of the Actor" width="200"></dd>
  <dt>Created At</dt>
  <dd><%= @actor.created_at %></dd>
  <dt>Updated at</dt>
  <dd><%= @actor.updated_at %></dd>
</dl>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th></th>
  </tr>
  <% @matching_characters.each do |character| %>
    <tr>
      <td>
        <% movie = Movie.where({ :id => character.movie_id }).first %>
        <%= movie.title %>
      </td>
      <td><%= movie.year %></td>
      <td>
        <% director = Director.where({ :id => movie.director_id}).first %>
        <%= director.name %>
      </td>
      <td><%= character.name %></td>
      <td>
        <a href="/movies/<%= movie.id %>">
          Show details 
        </a>
      </td>
    </tr>
  <% end %>
</table>
