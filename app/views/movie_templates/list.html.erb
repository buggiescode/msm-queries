<h1> List of all Movies </h1>




<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>
  <% Movie.all.each do |movie| %>
  <tr>
    <td> <%= movie.id %></td>
    <td> 
      <img src="<%= movie.image %>" width="100">
    </td>
    <td> <%= movie.title %></td>
    <td> <%= movie.year %></td>
    <% matching_directors = Director.where({ :id => movie.director_id })%>
    <% director = matching_directors.first %>
    <td> <%= director.name %></td>
    <td>
      <a href="/movies/<%= movie.id %>">
        Show details
      </a>
    </td>
  </tr>
<% end %>
</table>
